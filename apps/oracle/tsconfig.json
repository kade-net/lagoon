{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "./**/*.ts",
    "db/migrate.js",
    "postgres-js/index.js",
    "pg-core/index.js"
  ]
}
  